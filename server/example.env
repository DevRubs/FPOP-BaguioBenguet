PORT=5000
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority&appName=<app>

JWT_SECRET=replace-with-long-random-string

# SMTP settings for Nodemailer
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail-address@gmail.com
SMTP_PASS=your-google-app-password
EMAIL_FROM="Your App <your-gmail-address@gmail.com>"

# Client base URL for reset link
FRONTEND_BASE_URL=http://localhost:5173
# Email verification link will be: ${FRONTEND_BASE_URL}/verify-email?token=...

